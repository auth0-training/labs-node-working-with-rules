{
  "name": "Lab Node Working with Scopes",
  "version":"1.0.0",
  "resources": "resources.yml",
  "unauthenticatedTour": ".auth0/lab/guides/signin.tour",
  "postConfigureTour": ".auth0/lab/guides/work-with-rules.tour",
  "clients": [
    {
      "name":"Lab: Web App",
      "directory": "src/web-app",
      "env": {
        "API_URL": "Lab: API",
        "ISSUER_BASE_URL": "$tenant_base_url",
        "CLIENT_ID": "$client_id",
        "CLIENT_SECRET": "$client_secret",
        "SESSION_SECRET": "a long, randomly-generated string stored in env",
        "PORT": 7000
      }
    }
  ],
  "resourceServers": [
    {
      "name":"Lab: API",
      "directory": "src/api",
      "env": {
        "ISSUER_BASE_URL": "$tenant_base_url",
        "AUDIENCE": "$identifier",
        "PORT": 5000
      }
    }
  ]
}
